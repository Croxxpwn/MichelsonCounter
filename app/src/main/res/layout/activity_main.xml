<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.croxx.michelsoncounter.MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Michelson Counter"
        android:textSize="30dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please choose a method for detection."
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Designed by Croxx. STUDENT ID:16211011."
        android:textSize="13dp"
        android:paddingBottom="10dp"/>

    <Button
        android:id="@+id/HoughCaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hough Circle" />

    <Button
        android:id="@+id/CenterCaller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="  Brightness  " />
</LinearLayout>
